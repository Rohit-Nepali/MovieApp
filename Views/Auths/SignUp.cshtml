@model MvcMovie.Models.AuthVM.SignUp

<h2>Sign Up</h2>
<form asp-action="SignUp" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" type="Text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="Text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>

    <a class="nav-link text-dark" asp-area="" asp-controller="Auths" asp-action="SignIn">SignIn</a>
</form>
